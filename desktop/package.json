{
  "name": "desktop",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "html5-qrcode": "^2.3.8",
    "install": "^0.13.0",
    "jsbarcode": "^3.12.3",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-qr-code": "^2.0.18",
    "react-router-dom": "^7.13.0",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.3"
  },
  "main": "electron-main.cjs",
  "build": {
    "appId": "com.srilakshmitextiles.inventory",
    "productName": "Prodexa",
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "preload.cjs",
      "icon.png",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/node_modules",
        "to": "backend/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "setup_release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}